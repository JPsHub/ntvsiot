<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:bal="http://schemas.microsoft.com/wix/BalExtension">
	
	<Bundle Name="Node.js Tools for Windows IoT" Version="$(env.NodejsToolsBundleVer)" Manufacturer="Microsoft Corporation" UpgradeCode="0DB0A3E0-3865-4358-A120-0588422A1ABE" IconSourceFile="..\Icons\NodeJS.ico">

	<BootstrapperApplicationRef Id="WixStandardBootstrapperApplication.RtfLicense">
		<bal:WixStandardBootstrapperApplication 
			LicenseFile="License.rtf" 
			SuppressOptionsUI="yes"
			ThemeFile="Theme.xml"
			LogoFile="logo.png"
		/>
    </BootstrapperApplicationRef>	
	
    <Chain>
      <MsiPackage Id="NodejsChakraInstaller" SourceFile="$(env.NodejsToolsBundleRelDir)\node-chakracore.msi" Vital="yes" DisplayInternalUI="yes" Visible="yes" ForcePerMachine="yes"/>
      <RollbackBoundary />
	  <MsiPackage Id="NTVSBaseInstaller" SourceFile="$(env.NodejsToolsBundleRelDir)\NTVS.msi" Vital="yes" DisplayInternalUI="no" Visible="yes"/>
      <RollbackBoundary />
      <MsiPackage Id="NTVSIoTExtensionInstaller" SourceFile="$(env.NodejsToolsBundleRelDir)\NTVSIoTExtension.msi" Vital="yes" DisplayInternalUI="no" Visible="yes"/>
    </Chain>
	
    <WixVariable Id="WixStdbaThemeWxl" Value="Theme.wxl" />
  </Bundle>
</Wix>